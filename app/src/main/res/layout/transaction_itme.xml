<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foregroundTint="@color/white">

    <ImageView
        android:id="@+id/transactionIcon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/transaction_icon_back_round"
        android:padding="10dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/trans"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"

        android:text="Business"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/transactionIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/accountName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"

        android:background="@color/orenge"
        android:text="accountName"
        android:textColor="#FFFFFF"

        app:layout_constraintStart_toEndOf="@id/transactionIcon"
        app:layout_constraintTop_toBottomOf="@id/category" />

    <TextView
        android:id="@+id/transactionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"

        android:text="jun 2023"
        android:textColor="#9E9E9E"
        app:layout_constraintStart_toEndOf="@id/accountName"

        app:layout_constraintTop_toBottomOf="@id/category" />



    <TextView
        android:id="@+id/transactionAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"

        android:text="1000"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="#000000"

        />

</androidx.constraintlayout.widget.ConstraintLayout>